{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "demo/**/*.ts"],
  "exclude": ["node_modules", "./dist", "./demo", "src/**/*.spec.ts"]
}
